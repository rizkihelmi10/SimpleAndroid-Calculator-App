<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="#DEF228"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/calcuResult"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="#DEF228"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate" />

    <Button
        android:id="@+id/BtnAc"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="CLEAR"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcuResult"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/BtnBkspc"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="BACKSPACE"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/BtnAc"
        app:layout_constraintTop_toTopOf="@+id/BtnAc"
        />

    <Button
        android:id="@+id/Btn7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="7"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnAc"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/Btn8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="8"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Btn7"
        app:layout_constraintTop_toTopOf="@+id/Btn7"
        android:layout_marginLeft="5dp"
        />

    <Button
        android:id="@+id/Btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="9"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Btn8"
        app:layout_constraintTop_toTopOf="@+id/Btn8"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/BtnDiv"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:backgroundTint="#101010"
        android:textColor="#FDF6F6"
        android:text="รท"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Btn9"
        app:layout_constraintTop_toTopOf="@+id/Btn9"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/Btn4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="4"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/Btn7"
        app:layout_constraintTop_toBottomOf="@+id/Btn7"

        />

    <Button
        android:id="@+id/Btn5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#FF0000"
        android:text="5"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Btn4"
        app:layout_constraintTop_toTopOf="@+id/Btn4" />

    <Button
        android:id="@+id/Btn6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FF0000"
        android:text="6"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Btn5"
        app:layout_constraintTop_toTopOf="@+id/Btn5" />

    <Button
        android:id="@+id/BtnX"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#131313"
        android:text="x"
        android:textColor="#FAF2F2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Btn6"
        app:layout_constraintTop_toTopOf="@+id/Btn6" />

    <Button
        android:id="@+id/Btn1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="1"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/Btn4"
        app:layout_constraintTop_toBottomOf="@+id/Btn4"
        />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="2"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Btn1"
        app:layout_constraintTop_toTopOf="@+id/Btn1"
        />

    <Button
        android:id="@+id/Btn3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FF0000"
        android:text="3"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Btn2"
        app:layout_constraintTop_toTopOf="@+id/Btn2" />

    <Button
        android:id="@+id/BtnMin"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#090909"
        android:text="-"
        android:textColor="#F8F2F2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Btn3"
        app:layout_constraintTop_toTopOf="@+id/Btn3" />

    <Button
        android:id="@+id/BtnCom"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#FF0000"
        android:text="."
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Btn1"
        app:layout_constraintTop_toBottomOf="@+id/Btn1" />

    <Button
        android:id="@+id/Btn0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#FF0000"
        android:textColor="#000000"
        android:text="0"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/BtnCom"
        app:layout_constraintTop_toTopOf="@+id/BtnCom"
        />

    <Button
        android:id="@+id/BtnEq"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#6C6868"
        android:text="="
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Btn0"
        app:layout_constraintTop_toTopOf="@+id/Btn0" />

    <Button
        android:id="@+id/BtnPlus"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#0E0E0E"
        android:text="+"
        android:textColor="#FDFCFC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/BtnEq"
        app:layout_constraintTop_toTopOf="@+id/BtnEq" />


</androidx.constraintlayout.widget.ConstraintLayout>